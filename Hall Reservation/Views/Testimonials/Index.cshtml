@model IEnumerable<Hall_Reservation.Models.Testimonial>

@{
    ViewData["Title"] = "Index";
    var user = ViewBag.UserId;
    Layout = "~/Views/Shared/DashboardLayout.cshtml";
}

<h1>Testimonials from Users</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Opinion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Home)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opinion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Home.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusNavigation.CheckedId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserId)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |*@
                
                    <a asp-action="Approve" asp-route-id="@item.Id">Approve</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Decline</a>
            </td>
        </tr>
}
    </tbody>
</table>
