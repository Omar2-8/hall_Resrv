@model Hall_Reservation.Models.Login
@{
    Layout = null;
}


<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
          crossorigin="anonymous" />
    
    <title>Document</title>
</head>
<body>

     <section class="vh-100" style="background-color: #eee">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">
                                        Login
                                    </p>

    
                                 <form asp-action="Login" asp-controller="LoginAndRegestration" class="mx-1 mx-md-4"> 
                                  <div asp-validation-summary="ModelOnly" class="d-flex flex-row align-items-center mb-4"></div>
            <div class="">
                 <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                <label asp-for="UserName" class="flex-fill mb-0 control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="">
                 <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                 <label asp-for="Password" class=" d-flex flex-row align-items-center mb-4"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            
            <div class="">
                <input type="submit" value="Login" class="btn btn-primary btn-lg" />
            </div>
        </form>
  
 </div>
    <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                                    <img src="https://mdbootstrap.com/img/Photos/new-templates/bootstrap-registration/draw1.png"
                                         class="img-fluid"
                                         alt="Sample image" />
                                </div>

                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>



</body>
</html>
