@model IEnumerable<Hall_Reservation.Models.Booking>

@{
    ViewData["Title"] = "Index1";
    Layout = "~/Views/Shared/DashboardLayout.cshtml";
}

<h1>Index</h1>
<div class="row">
    <div class="col-md-4">
<form asp-action="Between">
        <label  >Search Between Dates</label>
         <div class="form-group">
                <label for="start" class="control-label"></label>
                <input type="datetime-local" for="start" class="form-control" />
                
            </div>
            <div class="form-group">
                <label for="end" class="control-label"></label>
                <input type="datetime-local" for="end"class="form-control" />
               
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" /> 
            </div>
    </form>
    </div>
    </div>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hall)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
           
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hall.HallId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserId)
            </td>
            
        </tr>
}
    </tbody>
</table>
