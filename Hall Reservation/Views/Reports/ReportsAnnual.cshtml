                  <div class="card-body table-responsive">
                      <table class="table" @*style="background-color:black;color:wihte"*@ id="example">  
                             <thead>
                                <tr>
                                    <th>User Name</th>
                                    <th>Hall Name</th>
                                    <th>Booking Number</th>
                                    <th>submit Date</th>                                    
                                    <th>Status</th>
                                </tr>
                             </thead>
                            <tbody @*style="background-color:black ; color:wihte"*@>

                                @foreach(var item in Model )
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.User.UserName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Hall.HallName)
                                        </td>
                                          <td>
                                            @Html.DisplayFor(modelItem => item.Booking.BookingId)
                                        </td>
                                           <td>
                                            @Html.DisplayFor(modelItem => item.CheckedDate)
                                        </td>
                                         <td>
                                            @Html.DisplayFor(modelItem => item.Status)
                                        </td>
                                    </tr>
                                }
                                 
                            </tbody>

                                <tr>
                                    <td>Number of users who have booked</td>
                                    <td>@NumberOfUsersWhoHaveBooked</td>
                                    <td></td>
                                    <td></td>
